<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Views.NewCategoriaActivity">

    <TextView
            android:text="AÑADIR CATEGORIA..."
            android:layout_width="350dp"
            android:layout_marginTop="100dp"
            android:paddingTop="20dp"
            android:background="@drawable/round_custom"
            android:textColor="@color/colorNegro"
            android:textAlignment="center"
            android:layout_height="80dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:id="@+id/textView"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tvNewIdCategoria" android:hint="Id..." app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/round_register_login"
            android:paddingLeft="15dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:textSize="24sp"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tvNewNombreCategoria" android:layout_marginTop="30dp"
            android:background="@drawable/round_register_login"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNewIdCategoria" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Nombre..." android:textSize="24sp"/>
    <Button
            android:text="Añadir Categoria"
            android:layout_width="350dp"
            android:background="@drawable/round_btn"
            android:layout_height="80dp" android:id="@+id/btnAñadirCosas" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNewNombreCategoria" android:textStyle="bold"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/imgHome" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAñadirCosas" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"/>

</android.support.constraint.ConstraintLayout>