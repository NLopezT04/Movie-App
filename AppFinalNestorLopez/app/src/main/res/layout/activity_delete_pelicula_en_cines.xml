<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Views.DeletePeliculaEnCinesActivity">

    <TextView
            android:text="BORRAR PELICULA..."
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/tvDeletePeliculaCine"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            android:background="@drawable/round_custom"
            android:paddingTop="20dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="30sp"
            android:textStyle="bold" android:textColor="@color/colorNegro"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="15dp"
            android:background="@drawable/round_register_login"
            android:id="@+id/tvDeleteIdProvincia" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDeletePeliculaCine" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp" android:hint="Id provincia..."/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/round_register_login"
            android:paddingLeft="15dp"
            android:id="@+id/tvDeleteIdCine" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteIdProvincia" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="24sp" android:hint="Id cine..."/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tvDeleteIdPelicula"
            android:background="@drawable/round_register_login"
            android:paddingLeft="15dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteIdCine" android:textSize="24sp"
            android:hint="Id pelicula..."/>
    <Button
            android:text="BORRAR PELICULA"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/btnBorrarPeliculaCine" android:layout_marginTop="30dp"
            android:background="@drawable/round_btn"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteIdPelicula" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="30sp" android:textStyle="bold"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/imgHome" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnBorrarPeliculaCine"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.8"/>
</android.support.constraint.ConstraintLayout>