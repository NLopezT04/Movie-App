<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Views.NewCineActivity">

    <TextView
            android:text="AÑADIR CINE..."
            android:layout_width="350dp"
            android:layout_marginTop="20dp"
            android:paddingTop="20dp"
            android:background="@drawable/round_custom"
            android:textColor="@color/colorNegro"
            android:textAlignment="center"
            android:layout_height="80dp" android:textSize="30sp" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:id="@+id/textView"/>

    <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/round_register_login"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tvNewIdProvinciaCine" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Id provincia..." android:textSize="24sp"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/round_register_login"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tvNewIdCine" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNewIdProvinciaCine"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:hint="Id..."
            android:textSize="24sp"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/tvNewNombreCine"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/round_register_login"
            android:layout_marginEnd="8dp" android:hint="Nombre..." android:textSize="24sp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/tvNewIdCine"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/round_register_login"
            android:id="@+id/tvNewDireccionCine" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNewNombreCine" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Dirección..." android:textSize="24sp"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/round_register_login"
            android:hint="Latitud..."
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:ems="10"
            android:id="@+id/tvNewLatitudCine" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNewDireccionCine" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="24sp"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:hint="Longitud..."
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/round_register_login"
            android:id="@+id/tvNewLongitudCine" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNewLatitudCine" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="24sp"/>
    <Button
            android:text="Añadir Cine"
            android:layout_width="350dp"
            android:background="@drawable/round_btn"
            android:layout_height="80dp" android:id="@+id/btnAñadirCine" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:ems="10"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintTop_toBottomOf="@+id/tvNewLongitudCine" android:layout_marginTop="30dp"/>

</android.support.constraint.ConstraintLayout>