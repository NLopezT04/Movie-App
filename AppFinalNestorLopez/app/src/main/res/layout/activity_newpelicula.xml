<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Views.NewPeliculaActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp">
            <TextView
                    android:text="Añadir Pelicula..."
                    android:layout_width="350dp"
                    android:background="@drawable/round_custom"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:ems="10"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp" android:id="@+id/tvTextoAñadirPelicula"
                    android:textSize="30sp" android:textColor="@color/colorNegro" android:textStyle="bold"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvNewIdCategoriaPelicula"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_register_login"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:width="340dp"
                    android:hint="Id categoria..."
                    android:padding="15dp"
                    android:textColor="@color/colorNegro" android:inputType="text"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:width="340dp"
                    android:layout_height="wrap_content" android:id="@+id/tvNewIdPelicula" android:textSize="24sp"
                    android:hint="Id pelicula..."
                    android:textColor="@color/colorNegro" android:inputType="text"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:width="340dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:id="@+id/tvNewTituloPelicula" android:textSize="24sp"
                    android:hint="Titulo..." android:textColor="@color/colorNegro" android:inputType="text"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:width="340dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:id="@+id/tvNewGeneroPelicula" android:textSize="24sp"
                    android:hint="Genero..." android:textColor="@color/colorNegro" android:inputType="text"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:width="340dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvNewDuracionPelicula" android:textSize="24sp"
                    android:hint="Duración..." android:textColor="@color/colorNegro" android:inputType="text"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:width="340dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:id="@+id/tvNewSinopsisPelicula" android:textSize="24sp"
                    android:hint="Sinopsis..." android:textColor="@color/colorNegro" android:inputType="text"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:width="340dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:id="@+id/tvNewRepartoPelicula" android:textSize="24sp"
                    android:hint="Reparto..." android:textColor="@color/colorNegro" android:inputType="text"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:width="340dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/tvNewIdProvinciaPelicula"
                    android:textSize="24sp"
                    android:textColor="@color/colorNegro"
                    android:hint="Id provincia del cine..." android:inputType="text"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:width="340dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvNewIdCinePelicula" android:textSize="24sp"
                    android:textColor="@color/colorNegro" android:hint="Id cine..." android:inputType="text"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:width="340dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorNegro"
                    android:ems="10"
                    android:id="@+id/tvNewIdPeliculaEnElCine" android:hint="Id pelicula en el cine..."
                    android:textSize="24sp" android:inputType="text"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:text="Imagen Pelicula"
                        android:layout_width="300dp"
                        android:layout_height="300dp" android:id="@+id/btnImgNewPelicula"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp" android:textStyle="bold" android:textColor="@color/colorNegro"
                        android:textSize="24sp"/>
                <de.hdodenhof.circleimageview.CircleImageView android:layout_width="300dp"
                                                              android:layout_height="300dp"
                                                              android:layout_marginLeft="20dp"
                                                              android:layout_marginBottom="5dp"
                                                              android:layout_marginTop="5dp"
                                                              android:id="@+id/selectImgPelicula"
                                                              android:layout_alignTop="@+id/btnImgNewPelicula"
                                                              android:layout_alignBottom="@+id/btnImgNewPelicula"/>
            </RelativeLayout>

            <Button
                    android:text="Añadir Pelicula"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content" android:id="@+id/btnAñadirNewPelicula"
                    android:background="@drawable/round_btn"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp" android:textSize="24sp" android:textColor="@color/colorNegro"
                    android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>