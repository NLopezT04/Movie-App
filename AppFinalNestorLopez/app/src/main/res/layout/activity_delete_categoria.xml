<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Views.DeleteCategoriaActivity">

    <TextView
            android:text="BORRAR CATEGORIA..."
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/tvDeleteCategoria"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="150dp"
            android:background="@drawable/round_custom"
            android:paddingTop="20dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textStyle="bold"
            android:textColor="@color/colorNegro" android:textSize="30sp"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:paddingLeft="15dp"
            android:id="@+id/tvDeleteIdCategoria" android:layout_marginTop="40dp"
            android:background="@drawable/round_register_login"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteCategoria" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Id..." android:textSize="24sp"/>
    <Button
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/btnDeleteCategoria" android:layout_marginTop="50dp"
            android:background="@drawable/round_btn"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteIdCategoria" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:text="BORRAR CATEGORIA" android:textSize="30sp"
            android:textStyle="bold"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/imgHome" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDeleteCategoria" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"/>
</android.support.constraint.ConstraintLayout>