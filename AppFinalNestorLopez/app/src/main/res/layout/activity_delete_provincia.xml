<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Views.DeleteProvinciaActivity">

    <TextView
            android:text="BORRAR PROVINCIA..."
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/tvDeleteProvincia" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_custom"
            android:layout_marginTop="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="20dp"
            android:layout_marginEnd="8dp" android:textSize="30sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="@color/colorNegro"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/round_register_login"
            android:paddingLeft="15dp"
            android:id="@+id/tvDeleteIdProvinciaPelicula" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteProvincia" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="24sp" android:hint="Id..."/>
    <Button
            android:text="BORRAR PROVINCIA"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/btnDeleteProvincia" android:layout_marginTop="80dp"
            android:background="@drawable/round_btn"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteIdProvinciaPelicula" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/colorNegro"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/imgHome" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDeleteProvincia" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.8"/>
</android.support.constraint.ConstraintLayout>