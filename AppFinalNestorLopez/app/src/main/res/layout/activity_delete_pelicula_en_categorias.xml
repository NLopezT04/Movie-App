<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Views.DeletePeliculaEnCategoriasActivity">

    <TextView
            android:text="BORRAR PELICULA..."
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/tvDeletePeliculaCategoria" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/round_custom"
            android:paddingTop="20dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="30sp" android:textColor="@color/colorNegro"
            android:textStyle="bold" android:textAlignment="center"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/round_register_login"
            android:paddingLeft="15dp"
            android:id="@+id/tvDeleteIdCategoria" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDeletePeliculaCategoria" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Id categoria..." android:textSize="24sp"
    />
    <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/round_register_login"
            android:paddingLeft="15dp"
            android:id="@+id/tvDeleteIdPelicula" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteIdCategoria" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:hint="Id pelicula..." android:textSize="24sp"/>
    <Button
            android:text="BORRAR PELICULA"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:background="@drawable/round_btn"
            android:id="@+id/btnBorrarPeliculaCategoria"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="30sp"
            android:textStyle="bold" android:textColor="@color/colorNegro" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteIdPelicula"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/imgHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBorrarPeliculaCategoria"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.8"/>
</android.support.constraint.ConstraintLayout>