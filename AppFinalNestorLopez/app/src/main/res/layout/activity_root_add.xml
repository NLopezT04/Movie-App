<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Views.RootAñadirActivity"
        android:background="@drawable/background">

    <TextView
            android:text="Añadir..."
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:background="@drawable/round_btn"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:id="@+id/tvRoot" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="36sp"/>
    <Button
            android:text="Categoria"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/btnCines"
            android:background="@drawable/round_custom" android:textSize="24sp"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.488"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/tvRoot"/>
    <Button
            android:text="Pelicula"
            android:background="@drawable/round_custom"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/btnNewPelicula" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCines" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp" android:textStyle="bold"/>
    <Button
            android:text="Provincia"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:background="@drawable/round_custom"
            android:id="@+id/btnNewProvincia" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNewPelicula" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="24sp" android:textStyle="bold"/>
    <Button
            android:text="Cine"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:background="@drawable/round_custom"
            android:id="@+id/btnNewCine"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="24sp" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNewProvincia"/>


</android.support.constraint.ConstraintLayout>