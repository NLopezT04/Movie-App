<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="1dp"
        android:layout_margin="4dp"
        card_view:cardUseCompatPadding="false"
        android:onClick="onClickComunidad">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/round_btn"
                android:textSize="18sp"
                android:id="@+id/tvNombrePelicula"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" card_view:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:textStyle="bold"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_default"/>
        <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/imgIconoPelicula"
                card_view:layout_constraintTop_toBottomOf="@+id/tvNombrePelicula"
                card_view:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
