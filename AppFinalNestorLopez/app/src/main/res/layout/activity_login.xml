<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorGris">

    <EditText
            android:layout_width="wrap_content"
            android:width="350dp"
            android:layout_height="80dp"
            android:hint="Email"
            android:background="@drawable/round_register_login"
            android:id="@+id/tvLoginEmail"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="24sp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:inputType="text"/>
    <EditText
            android:layout_width="wrap_content"
            android:width="350dp"
            android:layout_height="80dp"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:hint="Password"
            android:background="@drawable/round_register_login"
            android:ems="10"
            android:id="@+id/tvLoginPassword" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLoginEmail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="24sp"/>
    <Button
            android:text="LOGIN"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/round_btn"
            android:id="@+id/btnLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLoginPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textSize="24sp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>