<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/background">

    <TextView
            android:text="CARTELERA"
            android:layout_height="80dp" android:id="@+id/tvCartelera" android:layout_width="350dp"
            android:textSize="30sp" android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold"
            android:background="@drawable/round_custom"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="15dp" android:textAlignment="center"/>
    <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Views.PeliculasDisponibleEnActivity" android:id="@+id/recyclerPeliculaDisponibleEn"
            android:layout_marginTop="110dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>