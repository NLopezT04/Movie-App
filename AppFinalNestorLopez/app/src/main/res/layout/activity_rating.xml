<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Views.RatingActivity">

    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:id="@+id/tvTituloPelicula" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="130dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:textSize="30sp" android:textStyle="bold"
                    android:background="@drawable/round_custom"
                    android:paddingTop="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" android:textAlignment="center"
                    android:text="VALORAR PELICULA..."/>
            <RatingBar
                    android:layout_width="270dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/round_register_login"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/ratingBarPelicula"
                    android:isIndicator="false" android:stepSize="0.5" android:numStars="5" android:rating="0"/>
            <Button
                    android:text="Valorar"
                    android:layout_width="350dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_btn"
                    android:layout_marginTop="30dp"
                    android:layout_height="80dp" android:id="@+id/btnValorarPelicula" android:textSize="30sp"
                    android:textStyle="bold" android:textColor="@color/colorNegro" android:textAlignment="center"/>
        </LinearLayout>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>