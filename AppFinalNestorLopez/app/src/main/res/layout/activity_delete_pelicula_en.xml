<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Views.DeletePeliculaEnActivity">

    <TextView
            android:text="DELETE PELICULA EN..."
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/tvDeleteEn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/round_custom"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp" android:textStyle="bold" android:textColor="@color/colorNegro"/>
    <Button
            android:text="CATEGORIAS..."
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/btnDeleteEnCategorias" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/round_btn"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDeleteEn" android:textSize="30sp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="CINES..."
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/btnDeleteEnCines" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDeleteEnCategorias"
            android:background="@drawable/round_btn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>